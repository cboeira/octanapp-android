<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="#2196F3"
        tools:context=".activities.PostoActivity"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

        <ProgressBar
            android:id="@+id/progressBar_Posto"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight=".333333333">

                <ImageButton
                    android:id="@+id/bt_tracarRota"
                    android:layout_width="66dp"
                    android:layout_height="51dp"
                    android:background="#00FFFFFF"
                    android:backgroundTint="#2196F3"
                    app:srcCompat="@drawable/ic_map_black_24dp" />

                <TextView
                    android:id="@+id/estab_tracar-rota"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ROTA"
                    android:textColor="@color/azul1" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight=".333333333">

                <ImageButton
                    android:id="@+id/bt_avaliacaosimples"
                    android:layout_width="66dp"
                    android:layout_height="51dp"
                    android:background="#00FFFFFF"
                    app:srcCompat="@drawable/ic_star_black_24dp" />

                <TextView
                    android:id="@+id/estab_avaliar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:text="AVALIAR"
                    android:textColor="@color/azul1" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight=".333333333">

                <ImageButton
                    android:id="@+id/bt_promocoes"
                    android:layout_width="66dp"
                    android:layout_height="51dp"
                    android:background="#00FFFFFF"
                    android:backgroundTint="#2196F3"
                    app:srcCompat="@drawable/ic_promo" />

                <TextView
                    android:id="@+id/estab_promocoes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OFERTAS"
                    android:textColor="@color/azul1" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/azul1">
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RAMO"
                android:textSize="20sp"
                android:layout_marginTop="10sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:id="@+id/estab_ramo"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Telefone"
                android:textSize="16sp"
                android:layout_marginTop="10sp"
                android:layout_marginStart="15dp"
                android:textColor="@color/azul1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Telefone"
                android:textSize="20sp"
                android:layout_marginTop="5sp"
                android:layout_gravity="center"
                android:id="@+id/estab_telefone"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Endereço"
                android:textSize="16sp"
                android:layout_marginTop="10sp"
                android:layout_marginStart="15dp"
                android:textColor="@color/azul1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Endereço"
                android:textSize="20sp"
                android:layout_marginTop="5sp"
                android:layout_gravity="center"
                android:id="@+id/estab_endereco"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Informações"
                android:textSize="16sp"
                android:layout_marginTop="10sp"
                android:layout_marginStart="15dp"
                android:textColor="@color/azul1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Informacoes"
                android:textSize="20sp"
                android:layout_marginTop="10sp"
                android:layout_gravity="center"
                android:id="@+id/estab_info"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/azul1">
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/estab_nota"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NUM"
                    android:textStyle="bold"
                    android:textSize="40sp"
                    android:textColor="@color/azul1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NOTA MÉDIA"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/estab_numAv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NUM"
                    android:textStyle="bold"
                    android:textSize="40sp"
                    android:textColor="@color/azul1" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AVALIAÇÕES"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>