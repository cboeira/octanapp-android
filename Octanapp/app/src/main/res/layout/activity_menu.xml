<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MenuActivity">

    <include
        android:id="@+id/fragmento_mapa"
        layout="@layout/fragment_mapa" />
    <include
        android:id="@+id/toolbar_cadastro_veiculo"
        layout="@layout/toolbar" />

    <Button
        android:id="@+id/bt_cadastro_veiculo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="147dp"
        android:text="ADICIONAR VEICULO" />

    <TextView
        android:id="@+id/txt_alterar_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="103dp"
        android:background="#2196F3" />

    <Button
        android:id="@+id/bt_alterar_cadastro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="210dp"
        android:text="ALTERAR CADASTRO" />

    <Button
        android:id="@+id/bt_alterar_veiculo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="270dp"
        android:text="VEÍCULOS" />

    <Button
        android:id="@+id/bt_logoff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="332dp"
        android:text="LOGOFF" />

    <Button
        android:id="@+id/bt_posto1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="332dp"
        android:background="#03A9F4"
        android:text="Posto 1"
        android:textColor="#FCFCFC" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="341dp" />

    <Button
        android:id="@+id/novainterface"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="26dp"
        android:layout_marginBottom="266dp"
        android:text="NOVA INTERFACE" />
</RelativeLayout>