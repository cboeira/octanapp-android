<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="95dp"
    android:layout_marginTop="5dp"
    android:background="#fff"
    android:orientation="vertical"
    android:padding="8dp"
    android:id="@+id/container">

    <TextView
        android:id="@+id/veiculoemplacado_marca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="85dp"
        android:text="Marca"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/veiculoemplacado_modelo"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="85dp"
        android:layout_centerVertical="true"
        android:text="Modelo"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/veiculoemplacado_ano"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="85dp"
        android:layout_alignParentBottom="true"
        android:text="Ano"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/veiculoemplacado_texto_ativo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="25dp"
        android:text="ATIVO"
        android:textSize="20dp"
        android:textColor="@color/azul1"
        android:textStyle="bold"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/veiculoemplacado_marca_foto"
        android:layout_width="77dp"
        android:layout_height="69dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true" />


</RelativeLayout>