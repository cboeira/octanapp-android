<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AlterarSenhaActivity">

    <EditText
        android:id="@+id/txt_senha_nova_conf"
        android:layout_width="354dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="269dp"
        android:ems="10"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/txtvw_senha_nova_conf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="241dp"
        android:text="Confirmar nova senha:" />

    <EditText
        android:id="@+id/txt_senha_nova"
        android:layout_width="354dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="186dp"
        android:ems="10"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/txtvw_senha_nova"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="158dp"
        android:text="Nova senha:" />

    <include
        android:id="@+id/toolbar_alterar_senha"
        layout="@layout/toolbar" />

    <TextView
        android:id="@+id/txtvw_senha_atual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="71dp"
        android:text="Senha atual:" />

    <EditText
        android:id="@+id/txt_senha_atual"
        android:layout_width="354dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="99dp"
        android:ems="10"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/bt_alterar_senha"
        android:layout_width="238dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="327dp"
        android:background="@color/azul1"
        android:text="ALTERAR SENHA"
        android:textColor="#FFFFFF" />

</RelativeLayout>