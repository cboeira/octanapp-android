<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.RedefinirSenhaActivity">

    <include
        android:id="@+id/toolbar_redefinir_senha"
        layout="@layout/toolbar" />

    <TextView
        android:id="@+id/redefinir_digitar_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="76dp"
        android:text="Digite seu e-mail:"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="80dp" />

    <EditText
        android:id="@+id/redefinir_email"
        android:layout_width="357dp"
        android:layout_height="51dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="110dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="110dp" />

    <Button
        android:id="@+id/bt_redefinir_confirmacao"
        android:layout_width="332dp"
        android:layout_height="44dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="REDEFINIR SENHA"
        android:textSize="20dp"
        android:background="@color/azul2"
        android:textColor="#FFFFFF"
        android:layout_marginTop="200dp" />

</RelativeLayout>